/*
 * -------------------------------------------------
 *  nf-core/rvfvampliconseq Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 */

process {

  // TODO nf-core: Check the defaults for all processes
  cpus = 2 //{ check_max( 1 * task.attempt, 'cpus' ) }
  memory = 4.GB //{ check_max( 4.GB * task.attempt, 'memory' ) }
  time = 120.h //{ check_max( 120.h * task.attempt, 'time' ) }

  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
  maxRetries = 2
  maxErrors = '-1'

  // Process-specific resource requirements
  // NOTE - Only one of the labels below are used in the fastqc process in the main script.
  //        If possible, it would be nice to keep the same label naming convention when
  //        adding in your processes.
  // TODO nf-core: Customise requirements for specific processes.
  // See https://www.nextflow.io/docs/latest/config.html#config-process-selectors
  withLabel:process_low {
    cpus = 2 //{ check_max( 2 * task.attempt, 'cpus' ) }
    memory = 2.GB //{ check_max( 2.GB * task.attempt, 'memory' ) }
    time = 24.h //{ check_max( 24.h * task.attempt, 'time' ) }
  }
  withLabel:process_medium {
    cpus = 4 //{ check_max( 4 * task.attempt, 'cpus' ) }
    memory = 4.GB //{ check_max( 4.GB * task.attempt, 'memory' ) }
    time = 48.h //{ check_max( 48.h * task.attempt, 'time' ) }
  }
  withLabel:process_high {
    cpus = 4 //{ check_max( 8 * task.attempt, 'cpus' ) }
    memory = 4.GB //{ check_max( 8.GB * task.attempt, 'memory' ) }
    time = 72.h //{ check_max( 72.h * task.attempt, 'time' ) }
  }
  withLabel:process_long {
    time = 20.h //{ check_max( 20.h * task.attempt, 'time' ) }
  }
  withName:get_software_versions {
    memory = 1.GB //{ check_max( 1.GB * task.attempt, 'memory' ) }
    cache = false
  }
}
